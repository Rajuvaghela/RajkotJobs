<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_user_profile"
                android:layout_width="@dimen/ninezero"
                android:layout_height="@dimen/ninezero"
                android:layout_marginTop="@dimen/onefive"
                android:src="@drawable/profile"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="1dp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/onefive">

                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/onetwo"
                    android:layout_marginLeft="@dimen/onetwo"
                    android:layout_marginRight="@dimen/onefive"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_uname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/twofive"
                            android:layout_height="@dimen/twofive"
                            android:src="@drawable/user" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/et_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/two"
                                android:hint="Username"
                                android:inputType="textEmailAddress"
                                android:paddingLeft="@dimen/five"
                                android:textColor="@color/colorPrimary" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/twofive"
                            android:layout_height="@dimen/twofive"
                            android:src="@drawable/email" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/et_emial"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/two"
                                android:hint="Email"
                                android:inputType="textEmailAddress"
                                android:paddingLeft="@dimen/five"
                                android:textColor="@color/colorPrimary" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/twofive"
                            android:layout_height="@dimen/twofive"
                            android:src="@drawable/phone" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/et_phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/two"
                                android:hint="Phone"
                                android:inputType="textPassword"
                                android:paddingLeft="@dimen/five"
                                android:textColor="@color/colorPrimary" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/twofive"
                            android:layout_height="@dimen/threezero"
                            android:src="@drawable/loc" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/et_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/two"
                                android:hint="Address"
                                android:inputType="text"
                                android:lines="3"
                                android:maxLines="3"
                                android:paddingLeft="@dimen/five"
                                android:textColor="@color/colorPrimary" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="@dimen/onezero"
                        android:paddingTop="@dimen/onezero"
                        android:text="Education"
                        android:textSize="@dimen/oneseven"
                        android:textStyle="bold"></TextView>

                    <LinearLayout
                        android:id="@+id/ll_clg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/twofive"
                            android:layout_height="@dimen/threezero"
                            android:padding="@dimen/one"
                            android:src="@drawable/university" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_clg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/et_clg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/two"
                                android:hint="College or University"
                                android:inputType="text"
                                android:lines="3"
                                android:maxLines="3"
                                android:paddingLeft="@dimen/five"
                                android:textColor="@color/colorPrimary" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_degree"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/twofive"
                            android:layout_height="@dimen/threezero"
                            android:src="@drawable/degree" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_degree"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/et_degree"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/two"
                                android:hint="Degree"
                                android:inputType="text"
                                android:lines="3"
                                android:maxLines="3"
                                android:paddingLeft="@dimen/five"
                                android:textColor="@color/colorPrimary" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/fourzero"
                        android:text="e.g. BCA,BCOM,Bsc"
                        android:textSize="@dimen/onezero" />

                    <LinearLayout
                        android:id="@+id/ll_field_std"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/twofive"
                            android:layout_height="@dimen/threezero"
                            android:src="@drawable/field" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_field_std"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/et_field_std"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/two"
                                android:hint="Field of Study"
                                android:inputType="text"
                                android:lines="3"
                                android:maxLines="3"
                                android:paddingLeft="@dimen/five"
                                android:textColor="@color/colorPrimary" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/fourzero"
                        android:text="e.g. Computer Science,Nursing"
                        android:textSize="@dimen/onezero" />

                    <LinearLayout
                        android:id="@+id/ll_std_city"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/twofive"
                            android:layout_height="@dimen/threezero"
                            android:src="@drawable/city" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_std_city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/et_std_city"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/two"
                                android:hint="City"
                                android:inputType="text"
                                android:lines="3"
                                android:maxLines="3"
                                android:paddingLeft="@dimen/five"
                                android:textColor="@color/colorPrimary" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/fourzero"
                        android:text="e.g. Rajkot"
                        android:textSize="@dimen/onezero" />
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_skill"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/et_skill"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/two"
                            android:hint="Skills"
                            android:inputType="text"
                            android:lines="3"
                            android:maxLines="3"
                            android:paddingLeft="@dimen/five"
                            android:textColor="@color/colorPrimary" />
                    </android.support.design.widget.TextInputLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/onezero"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/two"
                            android:text="About you"
                            android:textColor="@color/black"
                            android:textSize="@dimen/onesix" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/about_user"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/onefivezero"
                                android:layout_marginLeft="@dimen/two"
                                android:background="@drawable/border_full"
                                android:gravity="start"
                                android:paddingLeft="@dimen/five"
                                android:textAlignment="viewStart"
                                android:textColor="@color/colorPrimary" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/four"
                        android:layout_marginTop="@dimen/five"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <RadioButton
                            android:id="@+id/rdo_fresher"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="@dimen/onefive"
                            android:text="fresher" />

                        <RadioButton
                            android:id="@+id/rdo_experienced"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/onefive"
                            android:layout_weight="1"
                            android:text="experienced" />
                    </RadioGroup>

                    <LinearLayout
                        android:id="@+id/ll_expextra"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingBottom="@dimen/onezero"
                            android:paddingTop="@dimen/onezero"
                            android:text="Work Experience"
                            android:textSize="@dimen/oneseven"
                            android:textStyle="bold"></TextView>
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recy_exp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </android.support.v7.widget.RecyclerView>
                        <Button
                            android:id="@+id/btn_Addmore"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/five"
                            android:padding="@dimen/five"
                            android:text="Add+"
                            android:background="@drawable/btncor"
                            android:textAllCaps="false"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/twozero" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll"
                    android:layout_marginTop="@dimen/twofive"
                    android:background="@drawable/btnfill"
                    android:padding="@dimen/five"
                    android:text="Update Profile"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/twozero" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
