<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/two"
    android:paddingTop="@dimen/twozero">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingRight="@dimen/five">

        <LinearLayout
            android:id="@+id/ll_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/onezero"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/sixzero"
                android:layout_height="@dimen/sixzero"
                android:src="@drawable/uico"
                app:civ_border_color="@color/white"
                app:civ_border_width="0.50dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:orientation="vertical"
                android:paddingRight="@dimen/five">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/onezero"
                        android:gravity="center"
                        android:text="Milan Pithadia"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/oneseven" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/onezero"
                        android:layout_marginTop="@dimen/two"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <ProgressBar
                            android:id="@+id/progressbar_Horizontal"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="@dimen/oneonezero"
                            android:layout_height="@dimen/four"
                            android:layout_marginTop="@dimen/two"
                            android:layout_weight="98"
                            android:background="@color/graylight"
                            android:max="100"
                            android:progress="50" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/two"
                            android:text="50%"
                            android:textColor="@color/black"
                            android:textSize="@dimen/onethree" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.70dp"
        android:layout_marginTop="@dimen/twozero"
        android:background="@color/graylight"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_cmp_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_cmp_home"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fourthree"
                    android:gravity="center|left"
                    android:orientation="horizontal"
                    android:padding="@dimen/five">

                    <ImageView
                        android:layout_width="@dimen/twozero"
                        android:layout_height="@dimen/twozero"
                        android:layout_marginLeft="@dimen/seven"
                        android:src="@drawable/ic_home" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/oneseven"
                        android:gravity="center"
                        android:text="Home"
                        android:textColor="@color/black"
                        android:textSize="@dimen/onefour" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_cmp_profile"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fourthree"
                    android:gravity="center|left"
                    android:orientation="horizontal"
                    android:padding="@dimen/five">

                    <ImageView
                        android:layout_width="@dimen/twozero"
                        android:layout_height="@dimen/twozero"
                        android:layout_marginLeft="@dimen/seven"
                        android:src="@drawable/user" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/oneseven"
                        android:gravity="center"
                        android:text="Profile"
                        android:textColor="@color/black"
                        android:textSize="@dimen/onefour" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_cmp_postjob"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fourthree"
                    android:gravity="center|left"
                    android:orientation="horizontal"
                    android:padding="@dimen/five">

                    <ImageView
                        android:layout_width="@dimen/twozero"
                        android:layout_height="@dimen/twozero"
                        android:layout_marginLeft="@dimen/seven"
                        android:src="@drawable/beg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/oneseven"
                        android:gravity="center"
                        android:text="Post Job"
                        android:textColor="@color/black"
                        android:textSize="@dimen/onefour" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_cmp_find_resume"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fourthree"
                    android:gravity="center|left"
                    android:orientation="horizontal"
                    android:padding="@dimen/five">

                    <ImageView
                        android:layout_width="@dimen/twozero"
                        android:layout_height="@dimen/twozero"
                        android:layout_marginLeft="@dimen/seven"
                        android:src="@drawable/ic_resume1600" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/oneseven"
                        android:gravity="center"
                        android:text="Find Resume"
                        android:textColor="@color/black"
                        android:textSize="@dimen/onefour" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/ll_user_home"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fourthree"
                    android:gravity="center|left"
                    android:orientation="horizontal"
                    android:padding="@dimen/five">
                    <ImageView
                        android:layout_width="@dimen/twozero"
                        android:layout_height="@dimen/twozero"
                        android:layout_marginLeft="@dimen/seven"
                        android:src="@drawable/ic_home" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/oneseven"
                        android:gravity="center"
                        android:text="Home"
                        android:textColor="@color/black"
                        android:textSize="@dimen/onefour" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_viewjob"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fourthree"
                    android:gravity="center|left"
                    android:orientation="horizontal"
                    android:padding="@dimen/five">

                    <ImageView
                        android:layout_width="@dimen/twozero"
                        android:layout_height="@dimen/twozero"
                        android:layout_marginLeft="@dimen/seven"
                        android:src="@drawable/ic_eye" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/oneseven"
                        android:gravity="center"
                        android:text="Job View"
                        android:textColor="@color/black"
                        android:textSize="@dimen/onefour" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_savejob"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fourthree"
                    android:gravity="center|left"
                    android:orientation="horizontal"
                    android:padding="@dimen/five">

                    <ImageView
                        android:layout_width="@dimen/twozero"
                        android:layout_height="@dimen/twozero"
                        android:layout_marginLeft="@dimen/seven"
                        android:src="@drawable/ic_like" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/oneseven"
                        android:gravity="center"
                        android:text="Saved job"
                        android:textColor="@color/black"
                        android:textSize="@dimen/onefour" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_recent"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fourthree"
                    android:gravity="center|left"
                    android:orientation="horizontal"
                    android:padding="@dimen/five">

                    <ImageView
                        android:layout_width="@dimen/twozero"
                        android:layout_height="@dimen/twozero"
                        android:layout_marginLeft="@dimen/seven"
                        android:src="@drawable/ic_history" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/oneseven"
                        android:gravity="center"
                        android:text="Recent"
                        android:textColor="@color/black"
                        android:textSize="@dimen/onefour" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
