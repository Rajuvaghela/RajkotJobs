<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/dialoganim">

        <LinearLayout
            android:id="@+id/contentPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/onezero"
            android:layout_marginRight="@dimen/onezero"
            android:layout_marginTop="@dimen/onethree"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:paddingBottom="@dimen/five"
            android:paddingTop="@dimen/twozero">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:paddingLeft="@dimen/six"
                android:text="Job Title"/>

            <EditText
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/two"
                android:inputType="textPersonName"
                android:paddingLeft="@dimen/five"
                android:hint="Job Title"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/graydark" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:paddingTop="@dimen/five"
                android:paddingLeft="@dimen/six"
                android:text="Company"/>
            <EditText
                android:id="@+id/et_cmp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/two"
                android:hint="Company"
                android:inputType="textPersonName"
                android:paddingLeft="@dimen/five"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/graydark" />

            <LinearLayout
                android:id="@+id/ll_std_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:paddingLeft="@dimen/six"
                    android:paddingTop="@dimen/five"
                    android:text="City"/>

                <EditText
                    android:id="@+id/et_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/two"
                    android:hint="City"
                    android:inputType="text"
                    android:lines="3"
                    android:maxLines="3"
                    android:paddingLeft="@dimen/five"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/graydark" />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:paddingTop="@dimen/five"
                android:paddingLeft="@dimen/six"
                android:text="Time period"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2">
                <Spinner
                    android:id="@+id/sp_fmonth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/seven"
                    android:layout_marginRight="@dimen/five"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/five" />

                <Spinner
                    android:id="@+id/sp_fyear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginRight="@dimen/seven"
                    android:layout_weight="1" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To"
                android:textColor="@color/black"
                android:textSize="@dimen/onefive"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">
                <Spinner
                    android:id="@+id/sp_tmonth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/seven"
                    android:layout_marginRight="@dimen/five"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/five" />

                <Spinner
                    android:id="@+id/sp_tyear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginRight="@dimen/seven"
                    android:layout_weight="1" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:paddingTop="@dimen/five"
                android:paddingLeft="@dimen/six"
                android:text="description"/>
            <EditText
                android:id="@+id/et_jobdesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/two"
                android:gravity="top"
                android:hint="Job Description"
                android:inputType="textMultiLine"
                android:maxHeight="@dimen/sevenfive"
                android:maxLines="4"
                android:nestedScrollingEnabled="false"
                android:paddingLeft="@dimen/five"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/graydark" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/threezero"
            android:layout_height="@dimen/threezero"
            android:layout_alignParentRight="true"
            android:background="@drawable/close" />

        <TextView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/two"
            android:layout_marginTop="@dimen/onesix"
            android:background="@color/white"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>
